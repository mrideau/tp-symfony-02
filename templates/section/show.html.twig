{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

    <div class="container mx-auto">
        <section class="relative p-10 h-1/3" style="background-image: url('/uploads/{{ section.imageUrl }}')">

        </section>

        <h1 class="text-5xl font-bold uppercase">{{ section.name }}</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_section_index') }}">Sections</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ section.name }}</li>
            </ol>
        </nav>

        <ul class="mt-5">
            {% for club in section.clubs %}

                <li>
                    <a href="{{ path('app_club_show', {slug: club.slug}) }}">
                        <article>
                            <h2>{{ club.name }}</h2>
                        </article>
                    </a>
                </li>

            {% endfor %}
        </ul>
    </div>

{% endblock %}
